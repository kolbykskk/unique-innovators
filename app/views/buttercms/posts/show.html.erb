<%= content_for :html_title, @post.seo_title %>
<%= content_for :meta_description, @post.meta_description %>
<div class="background no-mobile">
  <div class="container blog">
    <img class="blog-img" src="https://image.ibb.co/hxtqdy/influencer.png" height= "160px" />
    BLOG
  </div>
</div>
</div>
<div class="container">
  <ol class="breadcrumb">
    <li class="what-were"><%= link_to "What We're Up To", buttercms_blog_path %></li>
    <li class="active"><%= @post.title %></li>
  </ol>

  <div class="inside" style="box-shadow:0px 1px 0px grey; !important;">
  <div class='date-cont'>
    <p class="date"><b><%= Time.parse(@post.published).strftime('%B %d, %Y') %></b></p>
  </div>

  <!-- Post body -->
  <div style=" word-wrap: break-word;">
    <%= @post.body.html_safe %>
  </div>
  <!-- Link to Next Post -->
  <% if @next_post %>
    <hr>
    <div class="btn btn-info next-post"><b>Next Post:</b> <%= link_to @next_post.title, buttercms_post_path(@next_post.slug), :title => @next_post.title %></div>
  <% end %>
  </div>
</div>
