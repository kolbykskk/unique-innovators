<script>
  var map;
  function initMap(){
    map = new google.maps.Map(document.getElementById('map'), {
      center: {lat: <%= @lat %>, lng: <%= @lng %>},
      zoom: 8
    });
  }
</script>

<div class="row">
  <div class="col-md-12 gig-owner-bar">
    <div class="inside">
      <%= link_to "Edit", edit_gig_path(@gig), class: 'btn btn-sm btn-warning', 'data-turbolinks': false %>
      <%= link_to "Delete", @gig, method: :delete, class: 'btn btn-sm btn-danger' %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-8 gig-main">
    <div class="inside">
      <div class="gig-header">
        <h3 class="gig-title"><%= @gig.title %></h3>
        <small> posted <%= time_ago_in_words(@gig.created_at) %> ago</small>
        <hr>
      </div>
      <ol class="breadcrumb">
        <li>Categories</li>
        <li class="active"><%= @gig.category %></li>
      </ol>
      <div id="myCarousel" class="carousel slide">
        <!-- Wrapper for slides -->
        <div class="carousel-inner text-center">
            <%= render partial: 'gallery' %>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
          <span class="glyphicon glyphicon-chevron-left"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
          <span class="glyphicon glyphicon-chevron-right"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
    <div class="row desc">
      <div class="col-md-12">
        <div class="inside">
          <div class="gig-description">
            <h3><b>More about this gig</b></h3>
            <hr>
            <p><%= @gig.description %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-4 gig-map">
    <div class="inside">
      <small><b>Available:</b> <%= @gig.allow %></small><br>
      <small><i class="fas fa-map-marker-alt"></i> <%= @gig.location %></small>
      <hr>
      <div id="map"></div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="inside">
      <div class="gig-user">
      <%= image_tag @gig.user.avatar_url(128), class: 'gig-gravatar' %>
      <h4><b>Username</b></h4>
      <p><small>Member since <%= @gig.user.created_at.strftime("%b %d %Y") %></small></p>
      <div class="rating">
        <% 5.times do %>
          <i class="fas fa-bolt"></i>
        <% end %>
        <p style="color: black; display: inline;">5</p>
      </div>
    </div>
      <hr>
      <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed sit amet nunc malesuada, commodo orci fermentum, eleifend est. Pellentesque suscipit lacus eget enim euismod, sed blandit ipsum malesuada.</p>
    </div>
  </div>
</div>

<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBjbcZiWF7waJt5NkAYWxvr06JKJWVNaJc&callback=initMap" async defer></script>
