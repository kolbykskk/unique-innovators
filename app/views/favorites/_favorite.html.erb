<% if favorite = current_user.favorite_for(gig) %>
  <%= link_to favorite, class: 'btn btn-danger', method: :delete, remote: true do %>
    <i class="glyphicon glyphicon-star-empty"> </i>&nbsp; Unfavorite
  <% end %>
<% else %>
  <%= link_to [gig, Favorite.new], class: 'btn btn-primary', method: :post, remote: true do %>
    <i class="glyphicon glyphicon-star"> </i>&nbsp; Favorite
  <% end %>
<% end %>
