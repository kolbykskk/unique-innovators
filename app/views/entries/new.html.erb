<div class="container">

  <ul class="nav nav-tabs">
    <li role="presentation" class="solo active"><a class="solotab" style="cursor: pointer;">Solo Entry - $50</a></li>
    <li role="presentation" class="group"><a class="grouptab" style="cursor: pointer;">Group Entry - $100</a></li>
  </ul>

  <div class="form1">
    <%= form_for @entry do |f| %>
      <% if @entry.errors.any? %>
        <div class="alert alert-danger">
          <h4><%= pluralize(@entry.errors.count, "error") %>.</h4>
          <ul>
            <% @entry.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="edit_form new_gig" style="max-width: 1200px;">
        <div class="form-group" style="display: none;">
          <%= f.text_field :price, value: 50, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :category %><br>
          <%= f.select :category, list_of_categories, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: 'form-control', placeholder: "Enter a title for your entry" %>
        </div>
        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_area :description, class: 'form-control', placeholder: "Enter a description for your entry - Include as many details as possible" %>
        </div>
        <div class="form-group">
          <%= f.label :gallery, "Gallery (CTRL + CLICK to select multiple images)" %>
          <%= f.file_field :gallery, multiple: true %>
        </div>
        <div class="form-group">
          <%= f.submit "Save Solo Entry", class:"btn btn-info" %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="form2" style="display:none;">
    <%= form_for @entry do |f| %>
      <% if @entry.errors.any? %>
        <div class="alert alert-danger">
          <h4><%= pluralize(@entry.errors.count, "error") %>.</h4>
          <ul>
            <% @entry.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="edit_form new_gig" style="max-width: 1200px;">
        <input name="active" value="false" style="display: none;"></input>
        <input name="competition_id" value="<%= Competition.find_by(active: true) %>" style="display: none;"></input>
        <div class="form-group" style="display: none;">
          <%= f.text_field :price, value: 100, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :category %><br>
          <%= f.select :category, list_of_categories, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: 'form-control', placeholder: "Enter a title for your entry" %>
        </div>
        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_area :description, class: 'form-control', placeholder: "Enter a description for your entry - Include as many details as possible" %>
        </div>
        <div class="form-group">
          <%= f.label :gallery, "Gallery (CTRL + CLICK to select multiple images)" %>
          <%= f.file_field :gallery, multiple: true %>
        </div>
        <div class="form-group">
          <%= f.submit "Save Group Entry", class:"btn btn-info" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<script>
  $('.solotab').click(function() {
    $('.form2').hide();
    $('.form1').show();
    $(".solo").addClass("active");
    $(".group").removeClass("active");
  });

  $('.grouptab').click(function() {
    $('.form1').hide();
    $('.form2').show();
    $(".group").addClass("active");
    $(".solo").removeClass("active");
  });
</script>
